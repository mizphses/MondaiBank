= form_for @quiz do |f|
  - if @quiz.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quiz.errors.count, "error")} prohibited this quiz from being saved:"
      %ul
        - @quiz.errors.full_messages.each do |message|
          %li= message
  .ui.form
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :subj
      = f.text_field :subj
    .field
      = f.label :tags
      = f.text_field :tags
    .field
      = f.label :admin
      = f.text_field :admin, :value=>current_user.email, :readonly=>"readonly"
    .actions
      = f.submit 'Save', :class=>"ui primary button"
